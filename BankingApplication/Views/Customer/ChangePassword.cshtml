@{
ViewData["Title"] = "Change Password";
}

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="row justify-content-center">
   <div class="col-md-4">
      <form asp-action="SavePassword" method="Post">
         <div class="form-group">
            <label class="control-label">Enter old password:</label>
            <input type="password" name="oldpassword" class="form-control" data-val="true"
               data-val-required="Enter your current password." />
            @Html.ValidationMessage("oldpassword", new { @class = "text-danger" })
         </div>
         <div class="form-group">
            <label class="control-label">Enter new password:</label>
            <input type="password" name="newpassword" class="form-control" data-val="true"
               data-val-required="Enter your new password." />
            @Html.ValidationMessage("newpassword", new { @class = "text-danger" })
         </div>
         <div class="form-group">
            <label class="control-label">Confirm new password:</label>
            <input type="password" name="confirmnewpassword" class="form-control" data-val="true"
               data-val-required="Confirm your new password." />
            @Html.ValidationMessage("confirmnewpassword", new { @class = "text-danger" })
         </div>
         <div class="text-center">
            @Html.ValidationMessage("PasswordChangeFailed", new { @class = "text-danger" })
            @Html.ValidationMessage("PasswordChangeSuccess", new { @class = "text-success" })
         </div>
         <div class="form-group-inline text-center" style="margin-top:30px">
             <input type="submit" value="Save" class="btn btn-primary" id="button" style="margin-right:50px">
             <button type="button" class="btn btn-secondary" id="button"  onclick="location.href='@Url.Action("Index", "Home")'">Cancel</button>
         </div>
      </form>
   </div>
</div>
